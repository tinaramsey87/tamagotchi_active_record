<h1>Tamagotchis</h1>


<br>
<h3>Select User:</h3>
<% if @users.any? %>
<form action='users/<%= @user.id %>/pets' method='get'>
  <label for='user_id'>Select a user to see their pets:</label>
  <select id='user_id' type='text' name='user_id'>
    <% @users.each do |user| %>
      <option value="<%= user.id %>"> <%= user.username %> </option>
    <% end %>
  </select>
</form>
<% end %>

<br>
<h3>Add a new user</h3>
<form action='users/add_user' method='post'>
  <label for='new_user'>Enter a new user name:</label>
  <input type='text' name='new_user' id='new_user'>

  <button type='submit' class='btn btn-sm btn-success'>Add User</button>
</form>
